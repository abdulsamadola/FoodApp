<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_background"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:padding="15dp"
    android:background="@drawable/list_main_bg"
    android:elevation="2dp"
    android:layout_margin="10sp"
    android:orientation="vertical"
    >
<FrameLayout
    android:id="@+id/list_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/beef_burger_icon"
    >


    <TextView
        android:id="@+id/list_price"
        android:background="@drawable/list_price_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="$15"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#F7F7F7"
        android:textSize="12sp"
        android:layout_gravity="bottom|end"
        android:elevation="2dp"
        />

</FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/beef_burger"
            android:textSize="16sp"
            android:textColor="#000"
            android:textAlignment="center"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/rating_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_icon"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/list_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/textColor"
                android:layout_gravity="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/textColor"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/list_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 mins"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/textColor"
                android:layout_gravity="center"

                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>